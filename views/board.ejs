<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Board</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <style>
    textarea {
        width: 200px;
        height: 150px;
    }
  </style>
  <body>
    <h4>Board</h4>
    <h4><a href="/users/logout">Logout</a></h4>
    <h4>Siema <%= user %> <%= email %></h4>
    <ul>
      <% if(messages.success_msg) { %>
      <li><%= messages.success_msg %></li>
      <% } %>
    </ul>
    <ul>
      <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
      <li><%= error.message %></li>
      <% }) %> <% } %>
    </ul>
    <h4>Challenges</h4>
    <% if (typeof challenges != 'undefined') { %>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Content</th>
          <th scope="col">User</th>
          <th scope="col">Taken</th>
          <th scope="col">Success</th>
          <th scope="col">Accept</th>
        </tr>
      </thead>
      <tbody>
        <% challenges.forEach(challenge => { %>
          <tr>
            <th scope="row"><%= challenge.id %></th>
            <td><textarea disabled><%= challenge.content %></textarea></td>
            <td><%= challenge.email %></td>
            <td><%= challenge.displayed %></td>
            <td><%= challenge.success %></td>
            <td>
              <% if (challenge.email == email && !challenge.success && !challenge.displayed) { %>
              <a href="/challenges/accept?id=<%= challenge.id %>">Accept</a>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <% } %>
    <form action="/challenges/register" method="POST">
      <div>
        <input type="text" id="name" name="name"  value="<%= user %>" readonly/>
      </div>
      <div>
        <input type="email" id="email" name="email" value="<%= email %>" readonly/>
      </div>
      <div>
        <textarea id="content" name="content" placeholder="Content" required></textarea>
      </div>
      <div>
        <input type="submit" value="Create Challenge" />
      </div>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
