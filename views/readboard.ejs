  <body>
    <h4><a href="/users/logout">Logout</a></h4>
    <% if (typeof challenge != 'undefined') { %>
      <h4>Challenger: <%= challenge.name %></h4>
      <h4>Challege</h4>
      <textarea disabled><%= challenge.content %></textarea>
      <h4><a href="/challenges/take?id=<%= challenge.id %>">Accept</a></h4>
    <% } else { %>
      <h4>All Challenges Done! Oddajemy Cie Karolinie!</h4>
    <% } %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
